{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="text-center">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h1 class="h3 my-3 font-weight-normal">Inicia sesión</h1>
    <div class="d-flex flex-column align-items-center">
    <label for="inputUsername">Usuario</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control w-25 mt-1 mb-2" autocomplete="username" required autofocus>
    <label for="inputPassword"">Contrasinal</label>
    <input type="password" name="password" id="inputPassword" class="form-control w-25 my-1" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox my-2">
        <label>
            <input type="checkbox" name="_remember_me"> Recórdame</input>
        </label>
    </div>

    <button class="btn btn-lg btn-primary mt-2" type="submit">
        Entrar
    </button>
</form>
{% endblock %}
