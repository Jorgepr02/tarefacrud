{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-3">Detalles del viaxe</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Destino: {{ viaxe.destino }}</h5>
            <p class="card-text"><strong>Fecha:</strong> {{ viaxe.data|date('d-m-Y') }}</p>
            <p class="card-text"><strong>Duración:</strong> {{ viaxe.duracion }} días</p>
            <p class="card-text"><strong>Motivo:</strong> {{ viaxe.motivo ?: '-' }}</p>
            <p class="card-text"><strong>Transporte:</strong> {{ viaxe.transporte }}</p>
            <p class="card-text"><strong>Alojamiento:</strong> {{ viaxe.aloxamento ?: '-' }}</p>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a href="{{ path('listar_viaxes') }}" class="btn btn-secondary">Volver</a>
    </div>
</div>
{% endblock %}