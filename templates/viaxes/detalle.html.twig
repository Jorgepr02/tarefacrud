{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4 w-50">
    <h2 class="mb-3">Detalles do viaxe</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Destino: {{ viaxe.destino }}</h5>
            <p class="card-text"><strong>Data:</strong> {{ viaxe.data|date('d-m-Y') }}</p>
            <p class="card-text"><strong>Duración:</strong> {{ viaxe.duracion }} días</p>
            <p class="card-text"><strong>Motivo:</strong> {{ viaxe.motivo ?: '-' }}</p>
            <p class="card-text"><strong>Transporte:</strong> {{ viaxe.transporte }}</p>
            <p class="card-text"><strong>Aloxamento:</strong> {{ viaxe.aloxamento ?: '-' }}</p>
        </div>
    </div>
    <div class="mt-3 mb-3">
        <a href="{{ path('listar_viaxes') }}" class="btn btn-secondary">Volver</a>
    </div>
</div>
<div class="text-center my-3">
    <form method="post" action="{{ path('app_logout') }}">
        <button class="btn btn-lg btn-secondary align-self-center mt-5" type="submit">Pechar sesión</button>
    </form>
</div>
{% endblock %}